<?xml version="1.0" encoding="utf-8"?>
 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".EmergencyActivity">
      <fragment
          android:id="@+id/map"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          class="com.google.android.gms.maps.SupportMapFragment"/>
     <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <RelativeLayout
              android:id="@+id/call_emergency"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:background="@drawable/map_button"
              android:clickable="true"
              android:layout_alignParentTop="true"
              android:layout_alignParentLeft="true">
              <ImageView
                  android:id="@+id/emergency_icon"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_first_heart_clear"/>
              <TextView 
                  android:id="@+id/emergency_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/call911"
                  android:layout_below="@id/emergency_icon"
                  android:textColor="@android:color/white"
                  android:layout_centerHorizontal="true"/>
          </RelativeLayout>
          <RelativeLayout
              android:id="@+id/shutdown_button"
              android:layout_width="75dp"
              android:layout_height="75dp"
              android:background="@drawable/map_button"
              android:clickable="true"
              android:layout_alignParentTop="true"
              android:layout_alignParentRight="true">
              <ImageView
                  android:id="@+id/shutdown_icon"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_online_button_clear"
                  android:layout_marginBottom="5dp"/>
              <TextView 
                  android:id="@+id/shutdown_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/shutdown"
                  android:layout_below="@id/shutdown_icon"
                  android:textColor="@android:color/white"
                  android:layout_centerHorizontal="true"/>
          </RelativeLayout>
          <TextView 
              android:id="@+id/location"
              android:layout_width="wrap_content"
              android:background="@color/transparent_white"
              android:layout_height="wrap_content"
              android:textColor="@android:color/white"
              android:padding="10dp"
              android:layout_centerHorizontal="true"
              android:layout_below="@id/call_emergency"
              android:text="@string/location"/>
          <ScrollView
              android:id="@+id/status_text"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:background="@color/transparent_white"
              android:layout_above="@+id/input_container">
		      <TextView 
			      android:id="@+id/status"
			      android:layout_width="match_parent"
		          android:layout_height="wrap_content"
			      android:textColor="@color/transparent_white"
			      android:text="@string/app_name"/>
          </ScrollView>
          <LinearLayout 
              android:id="@+id/input_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true">
              <EditText
                  android:id="@+id/input_edittxt"
                  android:layout_weight="0.4"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:inputType="text|textAutoCorrect|textAutoComplete|textMultiLine" />
          </LinearLayout>
      </RelativeLayout>
</FrameLayout>
