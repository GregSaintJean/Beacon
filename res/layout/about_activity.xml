<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@android:color/white">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/app_icon"
            android:text="@string/app_name"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/app_info"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/open_source_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp"
            android:text="@string/open_sources_libraries"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView 
                android:id="@+id/bullet_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="@string/bullet"/>
            <TextView 
                android:id="@+id/twitter4j_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hyperlink_blue"
                android:text="@string/twitter4j"
                android:layout_toRightOf="@id/bullet_one"
                android:clickable="true"/>
            <TextView 
                android:id="@+id/bullet_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginRight="5dp"
                android:layout_below="@id/bullet_one"
                android:layout_alignParentLeft="true"
                android:text="@string/bullet"/>
            <TextView 
                android:id="@+id/gson_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bullet_two"
                android:layout_below="@id/bullet_one"
                android:textColor="@color/hyperlink_blue"
                android:clickable="true"
                android:text="@string/gson"/>    
        </RelativeLayout>
        <TextView 
            android:id="@+id/apache_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/grey"
            android:textColor="@android:color/black"
            android:text="@string/apache"/>
    </LinearLayout>

</ScrollView>
